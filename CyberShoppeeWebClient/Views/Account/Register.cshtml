


@model CyberShoppeeDataAccessLayer.Entity.Customer
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .SubmitButtonContainer {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 20px;
    }

    .card-body {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .form-control {
        width: 400px;
    }

    .btn-outline-secondary {
        width: 80px;
    }
</style>

<div class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0">
                    <div class="card-header  text-black text-center">
                        <h3>Login</h3>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }



                            <div class="form-group">
                                @Html.LabelFor(model => model.EmailAddress, new { @class = "text-black-50" })
                                @Html.TextBoxFor(model => model.EmailAddress, new { @class = "form-control rounded-pill" })
                                @Html.ValidationMessageFor(model => model.EmailAddress)
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, new { @class = "text-black-50" })
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control rounded-pill" })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>


                            <div class="SubmitButtonContainer">
                                <button type="submit" class="btn btn-outline-secondary btn-block rounded-pill">Login</button>
                            </div>
                        }
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>